{
  "compilerOptions": {

    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "lib": [
      "esnext"
    ],


    "declaration": false,
    "downlevelIteration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "inlineSourceMap": false,

    "noEmitHelpers": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noLib": false,
    "pretty": true,

    "removeComments": true,
    "sourceMap": true,

    "strictNullChecks": false,


    "module": "commonjs",
    "target": "esnext",

    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ]
  },
  "include": [
    "src/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}